{
  "manifest_version": 3,
  "name": "USERS",
  "version": "1.0.0",
  "description": "Show it once. It works forever.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "audioCapture"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "fonts/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
